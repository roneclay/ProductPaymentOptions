<?xml version="1.0"?>
<uiComponent name="paymentoptions_form" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_component.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">paymentoptions_form.paymentoptions_form_data_source</item>
            <item name="deps" xsi:type="string">paymentoptions_form.paymentoptions_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Payment Options Configuration</item>
    </argument>
    <dataSource name="paymentoptions_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Fineweb\ProductPaymentOptions\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">paymentoptions_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <dataProvider class="Fineweb\ProductPaymentOptions\Model\DataProvider"/>
    </dataSource>
    <form name="paymentoptions_form">
        <fieldset name="base_fieldset">
            <field name="method">
                <argument name="data" xsi:type="array">
                    <item name="options" xsi:type="array">
                        <!-- Add payment method options here -->
                    </item>
                </argument>
            </field>
            <field name="percentage_discount" formElement="input">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Valor do desconto em Porcentagem</label>
                    <dataScope>percentage_discount</dataScope>
                </settings>
            </field>
            <field name="fixed_discount" formElement="input">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Valor do desconto fixo em Reais</label>
                    <dataScope>fixed_discount</dataScope>
                </settings>
            </field>
            <field name="installments_without_interest" formElement="input">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Quantidade de Parcelas sem juros</label>
                    <dataScope>installments_without_interest</dataScope>
                </settings>
            </field>
            <field name="max_installments" formElement="input">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Max de parcelas permitidos</label>
                    <dataScope>max_installments</dataScope>
                </settings>
            </field>
            <field name="monthly_interest_rate" formElement="input">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Juros mensal de cada parcela</label>
                    <dataScope>monthly_interest_rate</dataScope>
                </settings>
            </field>
            <field name="label" formElement="input">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Label</label>
                    <dataScope>label</dataScope>
                </settings>
            </field>
        </fieldset>
        <buttons>
            <button name="save" class="Magento\Ui\Component\Control\Button\Generic" component="Magento_Ui/js/form/components/button">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Save</label>
                    <actions>
                        <action>save</action>
                    </actions>
                </settings>
            </button>
        </buttons>
    </form>
</uiComponent>
